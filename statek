    <script>
		const ship = document.getElementById('spaceship');
		
		let posX = 0;
		let posY = 0;
	
        function ruch(gdzie){
            console.log(gdzie)
			switch(gdzie){
			case 'gora':
			posY = posY - space
			break;
			case 'dol':
			posY = posY + space
			break;
			case 'lewo':
			posX = posX - space
			break;
			case 'prawo':
			posX = posX + space
			break;
			
			
			ship.style.left = posX = 'px';
        }
    </script>
